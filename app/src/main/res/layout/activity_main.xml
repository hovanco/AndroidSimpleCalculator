<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    // add image
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="18dp"
        android:adjustViewBounds="true"
        android:src="@drawable/caculator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Enter number:"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edt_number1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#0000FF"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Enter number:"
            android:textColor="#000080"
            android:textSize="30sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edt_number2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#0000FF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_Sum"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textStyle="bold"
            android:background="#00FF00"
            />

        <Button
            android:id="@+id/btn_Subtraction"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:background="#00EE00"
            />

        <Button
            android:id="@+id/btn_Multiple"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textStyle="bold"
            android:background="#00CD00"
            />

        <Button
            android:id="@+id/btn_Divided"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textStyle="bold"
            android:background="#008B00"
            />

        <Button
            android:id="@+id/btn_Average"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textStyle="bold"
            android:background="#006400"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_Result"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="30dp"
       />
</LinearLayout>